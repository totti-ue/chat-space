-# メイン画面右側全体を指定
.main-chat
  -# 上：選択中のグループ
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        group.name
      %ul.main-header__left-box__member-list
        Member: username
        %li.main-header__left-box__member-list__member
    = link_to edit_group_path(current_user) do
      .main-header__edit-btn Edit

  -# 中：メッセージ一覧
  .main-chat__contents
    = render @messages
    -# .content
    -#   .message-upper-info
    -#     %p{class: "message-upper-info__talker"}oni
    -#     %p{class: "message-upper-info__date"}2020/02/02(Sun) 11:02:01
    -#   %p{class: "text-contents"}おはよう！

  
  -# 下：投稿フォーム
  .message
    = form_for [@group, @message] do |f|
      .form__mask
        = f.text_field :content, class: 'message-form', placeholder: 'type a message'
        = f.label :image, class: 'add-img' do
          = icon('fas', 'image', class: 'image')
          = f.file_field :image, class: 'file-up'
      = f.submit 'Send', class: 'submit-btn'
